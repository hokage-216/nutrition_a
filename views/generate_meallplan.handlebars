

<button id="generateMealsBtn">Generate Daily Meals</button>


<script>
  document.getElementById('generateMealsBtn').addEventListener('click', async () => {
    try {
      const response = await axios.get('/daily-meals');
      console.log(response.data); 
      alert('Daily meals generated successfully!');
    } catch (error) {
      console.error('Error generating daily meals:', error.message);
      alert('Failed to generate daily meals. Please try again later.');
    }
  });
</script>

